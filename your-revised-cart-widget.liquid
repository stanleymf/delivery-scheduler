            const timestamp = new Date().getTime();
            
            console.log('üîÑ Loading data from synced endpoints...');
            
            const [timeslotsRes, settingsRes] = await Promise.all([
                fetch(`${baseUrl}/api/public/widget/timeslots?v=1.8.0&t=${timestamp}`, {
